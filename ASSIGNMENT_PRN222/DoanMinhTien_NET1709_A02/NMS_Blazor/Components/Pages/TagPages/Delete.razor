@page "/tags/delete"
@using Microsoft.EntityFrameworkCore
@using NMS_BusinessObjects
@inject IDbContextFactory<NMS_DAOs.FunewsManagementContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Tag</h2>
    <hr />
    @if (tag is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">TagName</dt>
            <dd class="col-sm-10">@tag.TagName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Note</dt>
            <dd class="col-sm-10">@tag.Note</dd>
        </dl>
        <EditForm method="post" Model="tag" OnValidSubmit="DeleteTag" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(tag is null)">Delete</button> |
            <a href="/tags">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Tag? tag;

    [SupplyParameterFromQuery]
    private int TagId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        tag = await context.Tags.FirstOrDefaultAsync(m => m.TagId == TagId);

        if (tag is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTag()
    {
        using var context = DbFactory.CreateDbContext();
        context.Tags.Remove(tag!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tags");
    }
}
