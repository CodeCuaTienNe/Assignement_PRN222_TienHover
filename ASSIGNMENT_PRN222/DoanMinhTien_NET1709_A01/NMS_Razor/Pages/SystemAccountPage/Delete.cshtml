@page
@model NMS_Razor.Pages.SystemAccountPage.DeleteModel

@{
    ViewData["Title"] = "Delete Account";
    
    string roleName = Model.SystemAccount.AccountRole switch
    {
        1 => "Staff",
        2 => "Lecturer",
        3 => "Admin",
        _ => "Unknown"
    };
}

<h1>Delete Account</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this account?</h3>
    <p>This action cannot be undone.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.SystemAccount.AccountName</dd>
        
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.SystemAccount.AccountEmail</dd>
        
        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@roleName</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SystemAccount.AccountId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
