@page
@model NMS_Razor.Pages.NewsArticlePage.CreateModel

@{
    ViewData["Title"] = "Tạo bài viết mới";
}

<h1>Tạo bài viết mới</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="NewsArticle.NewsArticleId" class="control-label">Mã bài viết</label>
                <input asp-for="NewsArticle.NewsArticleId" class="form-control" required />
                <span asp-validation-for="NewsArticle.NewsArticleId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NewsArticle.NewsTitle" class="control-label">Tiêu đề</label>
                <input asp-for="NewsArticle.NewsTitle" class="form-control" required />
                <span asp-validation-for="NewsArticle.NewsTitle" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NewsArticle.Headline" class="control-label">Headline</label>
                <input asp-for="NewsArticle.Headline" class="form-control" required />
                <span asp-validation-for="NewsArticle.Headline" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NewsArticle.NewsContent" class="control-label">Nội dung</label>
                <textarea asp-for="NewsArticle.NewsContent" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="NewsArticle.NewsContent" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NewsArticle.NewsSource" class="control-label">Nguồn tin</label>
                <input asp-for="NewsArticle.NewsSource" class="form-control" />
                <span asp-validation-for="NewsArticle.NewsSource" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NewsArticle.CategoryId" class="control-label">Danh mục</label>
                <select asp-for="NewsArticle.CategoryId" class="form-control" asp-items="ViewBag.CategoryId" required></select>
                <span asp-validation-for="NewsArticle.CategoryId" class="text-danger"></span>
            </div>
            
            <!-- Ẩn các trường không cần thiết -->
            <input type="hidden" asp-for="NewsArticle.NewsStatus" value="true" />
            <input type="hidden" asp-for="NewsArticle.CreatedDate" />
            <input type="hidden" asp-for="NewsArticle.CreatedById" />
            
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Tạo bài viết</button>
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
