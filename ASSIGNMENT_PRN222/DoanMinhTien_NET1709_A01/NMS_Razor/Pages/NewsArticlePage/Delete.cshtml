@page "{id}"
@model NMS_Razor.Pages.NewsArticlePage.DeleteModel

@{
    ViewData["Title"] = "Delete Article";
}

<h1>Delete Article</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this article?</h4>
    <p>This action cannot be undone.</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning">
        @Model.ErrorMessage
    </div>
}

<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">@Model.NewsArticle.NewsTitle</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.NewsArticle.NewsArticleId</dd>
            
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.NewsArticle.NewsTitle</dd>
            
            <dt class="col-sm-2">Headline</dt>
            <dd class="col-sm-10">@Model.NewsArticle.Headline</dd>
            
            <dt class="col-sm-2">Created Date</dt>
            <dd class="col-sm-10">@(Model.NewsArticle.CreatedDate?.ToString("dd/MM/yyyy HH:mm"))</dd>
            
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.NewsArticle.Category?.CategoryName</dd>
            
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                <span class="badge @(Model.NewsArticle.NewsStatus == true ? "bg-success" : "bg-danger")">
                    @(Model.NewsArticle.NewsStatus == true ? "Active" : "Inactive")
                </span>
            </dd>
        </dl>
        
        <div class="card mb-2">
            <div class="card-header">Content Preview</div>
            <div class="card-body">
                <p class="text-truncate">@Model.NewsArticle.NewsContent</p>
            </div>
        </div>
    </div>
</div>
    
<form method="post">
    <input type="hidden" asp-for="NewsArticle.NewsArticleId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-page="./MyNews" class="btn btn-secondary">Cancel</a>
    </div>
</form>
