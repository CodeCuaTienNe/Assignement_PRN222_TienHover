@page "{id:int}"
@model NMS_Razor.Pages.NewsArticlePage.Tags.DetailsModel

@{
    ViewData["Title"] = "Tag Details";
}

<h1>Tag Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Tag ID</dt>
        <dd class="col-sm-9">@Model.Tag.TagId</dd>
        
        <dt class="col-sm-3">Tag Name</dt>
        <dd class="col-sm-9">@Model.Tag.TagName</dd>
        
        <dt class="col-sm-3">Note</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Tag.Note) ? "N/A" : Model.Tag.Note)</dd>
        
        <dt class="col-sm-3">Usage Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsInUse)
            {
                <span class="badge bg-success">In use by one or more articles</span>
            }
            else
            {
                <span class="badge bg-secondary">Not currently in use</span>
            }
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Tag.TagId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
